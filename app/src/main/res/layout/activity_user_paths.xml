<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserPathsActivity" >

    <TextView
        android:id="@+id/user_paths_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#434743"
        android:text="@string/user_paths"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="34sp" />

    <Button
        android:id="@+id/user_paths_map_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_paths_map_btn" />

    <ListView
        android:id="@+id/user_paths_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>